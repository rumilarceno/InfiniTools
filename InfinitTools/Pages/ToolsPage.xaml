<Page x:Class="InfinitTools.Pages.ToolsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InfinitTools.Pages"
      xmlns:localControls="clr-namespace:InfinitTools.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      Title="ToolsPage">

    <Grid>
        <TabControl x:Name="tabControl" TabStripPlacement="Left" HorizontalAlignment="Left"  Height="600" Margin="0,50,0,0" VerticalAlignment="Top" Width="780" Grid.ColumnSpan="3">
            <TabItem Header="Filename Copier" Height="50" Width="100">
                <Grid>
                    <localControls:FileNameCopierControl />
                </Grid>
            </TabItem>
            <TabItem Header="Time Tracker" Height="50" Width="100">
                <Grid>
                    <localControls:TimeTrackerControl />
                </Grid>
            </TabItem>
            <TabItem Header="Guest Tracker" Height="50" Width="100">
                <Grid>
                    <localControls:GuestTrackerControl />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
